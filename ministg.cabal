Executable ministg 
  main-is:         Main.hs
  hs-source-dirs:  src
  build-depends:   base, monads-tf, transformers, containers, parsec >= 3, pretty, haskell98, xhtml
  other-modules:
      Ministg.AST
      Ministg.Lexer
      Ministg.Parser
      Ministg.Utils
      Ministg.Eval
      Ministg.Arity
      Ministg.Pretty
      Ministg.State
      Ministg.DumpState
      Ministg.CallStack
      
